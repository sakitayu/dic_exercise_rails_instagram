<h1>ブログ一覧</h1>

<table>
  <tr>
    <th>内容</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.content %></td>
    <td>
      <% if blog.image.file.nil? %>
        <% else %>
        <%= image_tag blog.image.url %>
      <% end %>
    </td>
    <td><%= link_to '詳細', blog_path(blog.id) %></td>
    <td><%= link_to "編集", edit_blog_path(blog.id) %></td>
    <td>
      <%= link_to '削除', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
    </td>
  </tr>
<% end %>
</table>

<br>

<%= link_to '新しくブログを投稿する', new_blog_path %>